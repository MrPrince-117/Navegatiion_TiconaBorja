<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Parte superior naranja -->
    <LinearLayout
        android:id="@+id/topSection"
        android:orientation="vertical"
        android:background="#FFA000"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">>


        <TextView
            android:id="@+id/tv_title"
            android:text="Meals menu"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgFood"
            android:src="@drawable/img_meal"
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:text="Options"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topSection" />

    <Button
        android:id="@+id/btAddmeals"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:backgroundTint="@color/btAmarillo"
        android:text="Add Meals"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_options" />

    <Button
        android:id="@+id/btDeletemeals"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/btAmarillo"
        android:text="Delete Meals"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btAddmeals" />

    <Button
        android:id="@+id/btListallmeals"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/btAmarillo"
        android:text="List all meals"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btDeletemeals" />

    <Button
        android:id="@+id/btListmealsbytitle"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/btAmarillo"
        android:text="List meals by title"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btListallmeals" />



</androidx.constraintlayout.widget.ConstraintLayout>